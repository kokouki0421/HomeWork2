@model List<HomeWork2.Models.MyClassModel>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
                <th>備註</th>
            </tr>
            @{int i = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <th>@(++i)</th>
                    @if (item.Category == "支出")
                    {
                        <th class="alert-danger">@item.Category</th>

                    }
                    @if (item.Category == "收入")
                    {
                        <th class="alert-info">@item.Category</th>

                    }
                    <th>@item.Date.ToString("yyyy-MM-dd")</th>
                    <th>@item.Money.ToString("C")</th>
                    <th>@item.Remark.PadLeft(7).Substring(0, 7).Trim()</th>
                </tr>
            }
        </table>
    </div>
</div>
